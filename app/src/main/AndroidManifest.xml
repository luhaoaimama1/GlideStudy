<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zone.glidestudy">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- WIFI权限 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".AllTypeActivity"></activity>
        <activity android:name=".TargetActivity"></activity>


        <!--<meta-data-->
            <!--android:name="com.bumptech.glide.integration.okhttp3.OkHttpGlideModule"-->
            <!--android:value="GlideModule" />-->
        <meta-data
            android:name="com.example.zone.glidestudy.glideUtils.MyGlideModule"
            android:value="GlideModule" />
        <meta-data
            android:name="com.example.zone.glidestudy.other.GlideModelConfig"
            android:value="GlideModule" />
    </application>

</manifest>